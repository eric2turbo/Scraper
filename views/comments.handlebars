<div class="container">
    <div class="jumbotron">
        <h2> Article Comments </h2>

        <form action="/scrape" method="GET">
            <button class="btn-primary" type="submit" id="scrape">Scrape</button>
        </form> 
        <a href="/saved" class="btn btn-info" role="button">Saved Articles</a>
        <a href="/articles" class="btn btn-info" role="button">All Articles</a>
    </div>

    <div class="row" id="comments">
        {{#each posts}}
        <div class="comment" id={_id}>
            <div class="panel panel-default">
                <div class="panel-heading"><h3>{{title}}</h3></div>
                <div class="panel-body"><p>{{body}}</p></div>
                <div class="panel-footer"><button data-id={id} id="deletenote">Delete</button>
            </div>
        </div>
        {{/each}}
    </div>

</div>